{
  "name": "biseo",
  "private": true,
  "version": "1.0.0",
  "repository": "https://github.com/sparcs-kaist/biseo.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "dev": "yarn dev:db:up && yarn dev:db:migrate && yarn dev:app",
    "dev:app": "yarn all dev",
    "dev:db": "yarn server dev:db",
    "dev:db:up": "yarn server dev:db:up",
    "dev:db:migrate": "yarn server dev:db:migrate",
    "all": "dotenv -- nx run-many -t",
    "client": "dotenv yarn workspace biseo-client",
    "server": "dotenv yarn workspace biseo-server",
    "interface": "dotenv yarn workspace biseo-interface"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn eslint",
      "prettier --config ./.prettierrc --write -u"
    ]
  },
  "workspaces": [
    "server",
    "client",
    "interface"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.1",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.46.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "nx": "^15.9.2",
    "prettier": "^2.8.7"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
