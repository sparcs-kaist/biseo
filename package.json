{
  "name": "biseo",
  "private": true,
  "version": "1.0.0",
  "repository": "https://github.com/sparcs-kaist/biseo.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "dev": "yarn dev:db:up && yarn dev:db:migrate && yarn dev:app",
    "dev:app": "yarn all dev",
    "dev:db": "yarn server dev:db",
    "dev:db:up": "yarn server dev:db:up",
    "dev:db:migrate": "yarn server dev:db:migrate",
    "all": "dotenv -- nx run-many -t",
    "client": "dotenv yarn workspace biseo-client",
    "server": "dotenv yarn workspace biseo-server",
    "interface": "dotenv yarn workspace biseo-interface"
  },
  "workspaces": [
    "server",
    "client",
    "interface"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "dotenv-cli": "^7.2.1",
    "husky": "^8.0.3",
    "nx": "^15.9.2",
    "prettier": "^2.8.7"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
